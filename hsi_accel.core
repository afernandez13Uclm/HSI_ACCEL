# Licensed under the MIT License.
# ==============================================================================

CAPI=2:

name: uclm:hsi:hsi_accel:1.0.0

description: >
  Acelerador vectorial para imágenes hiperespectrales (HSI) con interfaz OBI compatible con X-HEEP.

filesets:
  rtl:
    files:
      - hw/rtl/hsi_accel_obi.sv
      - hw/rtl/hsi_vector_core_wrapper.sv
      - hw/rtl/hsi_vector_core.sv
      - hw/rtl/fifo_cache.sv
    file_type: systemVerilogSource

targets:
  default:
    filesets:
      - rtl
